{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots" : ["node_modules/@types", "src/types"],
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "types": ["gapi", "gapi.auth2", "node"],
  },
  "include": [
    "server/types/*.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}